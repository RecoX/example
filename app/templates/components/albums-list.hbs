<div class="tab-content">

    <div role="tabpanel" class="tab-pane active" id="related-artists">

        <div class="media-cards">

            {{#each albums as |album|}}
                <div class="media-card">
                    <div class="media-card__image" style="background-image: url(https://s3-us-west-2.amazonaws.com/s.cdpn.io/7022/hoodie.jpg);">
                        {{#link-to "album" album.infoHash class="ion-ios-play" tagName="i"}}{{/link-to}}
                    </div>

                    {{#link-to "album" album.infoHash class="media-card__footer"}}{{album.name}}{{/link-to}}

                </div>
            {{/each}}

        </div>

    </div>

</div>



